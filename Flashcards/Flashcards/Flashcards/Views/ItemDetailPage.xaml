<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flashcards.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Infinitive:" FontSize="Medium" />
        <Label Text="{Binding Infinitive}" FontSize="Small"/>
        <Label Text="Preteritum:" FontSize="Medium" />
        <Label Text="{Binding Preteritum}" FontSize="Small"/>
        <Label Text="Perfektum:" FontSize="Medium" />
        <Label Text="{Binding Perfektum}" FontSize="Small"/>
        <Label Text="Znaczenie:" FontSize="Medium" />
        <Label Text="{Binding Meaning}" FontSize="Small"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Usuń" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
    
</ContentPage>